<div class="data">
  <div class="action">{{{action}}}</div>
  <div class="footer">
    {{#projectName}}
    <span class="project">+{{projectName}}</span>
    {{/projectName}}
    {{#context}}
    <span class="context">@{{context}}</span>
    {{/context}}
  </div>
</div>
<div class="meta">
  <div class="number">
    <a class="btn btn-info disabled">{{number}}</a>
  </div>
  {{#priority}}
  <div class="priority">
    <a class="btn btn-success disabled">{{priority}}</a>
  </div>
  {{/priority}}
</div>